# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/comixsys?schema=public"

# PostgreSQL Configuration (usado pelo docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=comixsys

# Application
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=seu_secret_jwt_aqui
JWT_EXPIRES_IN=7d

# NF-e Configuration
NFE_AMBIENTE=homologacao
NFE_TIMEOUT=30000

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha
SMTP_FROM=noreply@comixsys.com.br

# Storage (para certificados e arquivos)
STORAGE_TYPE=local
STORAGE_PATH=./storage

# API Keys (se necess√°rio)
API_KEY=sua_api_key_aqui

